{
  "name": "nodejs-ts",
  "version": "0.0.1",
  "description": "A boilerplate project for NodeJS server with Typescript",
  "main": "build/index.ts",
  "engines": {
    "node": ">=16.8.0"
  },
  "scripts": {
    "tsc": "tsc",
    "test": "jest --watchAll",
    "start": "ts-node-dev --respawn --poll --transpile-only ./src/server.ts",
    "prettify": "prettier --write ./src/ --ignore-unknown",
    "clear": "jest --clearCache",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "Nadeem Jamali <nadeemjamali337@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-export-default-from": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/chance": "^1.1.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^27.0.1",
    "@types/superagent": "^4.1.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-jest": "^27.1.0",
    "chance": "^1.1.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "jest-extended": "^0.11.5",
    "prettier": "^2.3.2",
    "prettier-eslint": "^13.0.0",
    "pretty-quick": "^3.1.1",
    "superagent": "^6.1.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.2"
  }
}
